body[style="background-color: #222629;"]
  section.w-100.mb-5
    .mx-auto

    h1.text-center.pb-3
      |  Tengis Buyantogtokh 
    ul.nav.justify-content-center.mt-5
      li.nav-item.pr-2

        a.nav-link[href="/blog_index"]
          | Home
      li.nav-item.pr-2

        a.nav-link[href="/blog_index/about"]
          | About
      li.nav-item.pr-2

        a#highlight.nav-link[href="/blog_index/create"]
          | Create
      li.nav-item

        a.nav-link[href="/blog_index/contact"]
          | Contact
  section.w-100.mb-5
    div
      .head-title.pt-4.pb-4.text-center
        |  Create a new post 
      = simple_form_for(@post) do |f|
        = f.error_notification
        = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?
        .form-group.form-inputs
          = f.input :author, class: "form-control form", id:"create-username", placeholder:"Enter your name here..."
        .form-group.form-inputs
          = f.input :title, class:"form-control form", id:"create-author", placeholder:"Add your title..."
        .form-group.form-inputs
          = f.input :body, class:"form-control form", id:"create-contents", placeholder:"Write your blog post here...", :input_html => {rows: 20, maxlength: 3000}
        small
          | Max 3000 characters.
        .form-actions.w-100
          = f.button :submit, class:"create-button form-control w-100 mx-auto"
    section
      section
        |  <hr/ style="border:0.5px solid #474B4F; opacity: 70%;" class="mt-5 mb-5 ml-5 mr-5"> 
        .text-center.footer
