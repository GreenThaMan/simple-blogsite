<body style="background-color: #222629;">
    <section class="w-100 mb-5">
        <div class="mx-auto">
            <h1 class="text-center pb-3">
                Tengis Buyantogtokh
            </h1>
            <ul class="nav justify-content-center mt-5">
                <li class="nav-item pr-2">
                    <a class="nav-link" href="/blog_index">Home</a>
                </li>
                <li class="nav-item pr-2">
                    <a class="nav-link" href="/blog_index/about">About</a>
                </li>
                <li class="nav-item pr-2">
                    <a class="nav-link" id="highlight" href="/blog_index/create">Create</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/blog_index/contact">Contact</a>
                </li>
            </ul>
        </div>
    </section>
    <section class="w-100 mb-5">
        <div>
            <div class="head-title pt-4 pb-4 text-center">
                Create a new post
            </div>
            </form>
            <%= simple_form_for(@post) do |f| %>
              <%= f.error_notification %>
              <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
              <div class="form-group form-inputs">
                    <%= f.input :author, class: "form-control form", id:"create-username", placeholder:"Enter your name here..." %>
              </div>
              <div class="form-group form-inputs">
                    <%= f.input :title, class:"form-control form", id:"create-author", placeholder:"Add your title..." %>
                </div>
                <div class="form-group form-inputs">
                    <%= f.input :body, class:"form-control form", id:"create-contents", placeholder:"Write your blog post here...", :input_html => {rows: 20, maxlength: 3000} %>
                    <small>Max 3000 characters.</small>
                </div>
                <div class="form-actions w-100">
                    <%= f.button :submit, class:"create-button form-control w-100 mx-auto" %>
                </div>
            <% end %>
        </div>
    <section>
    <section>
        <hr/ style="border:0.5px solid #474B4F; opacity: 70%;" class="mt-5 mb-5 ml-5 mr-5">
